<!-- res/layout/activity_patient_login.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    tools:context=".User_pannel.Authentication.PatientLoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/add_hospital"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Jeevan Rekha"/>

            <!-- Patient Email -->
            <EditText
                android:id="@+id/editTextPatientEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <!-- Patient Password -->
            <EditText
                android:id="@+id/editTextPatientPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextPatientEmail"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:inputType="textPassword" />

            <!-- Patient Login Button -->
            <Button
                android:id="@+id/buttonPatientLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextPatientPassword"
                android:layout_marginTop="16dp"
                android:text="Login" />
            <!-- Register TextView -->
            <TextView
                android:id="@+id/textViewPatientRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buttonPatientLogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="New User? Register Here"
                android:textColor="@color/link_blue" />

            <!-- Forgot Password Button -->
            <TextView
                android:id="@+id/textViewPatientForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPatientRegister"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Forgot Password?"
                android:textColor="@color/link_blue" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
